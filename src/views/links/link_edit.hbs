<div class="container">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header text-center">
                    <strong>Editar Link {{data.titleLink}}</strong>
                </div>
                <div class="card-body">
                    <form action="/links/update/{{data.idLink}}" method="post">
                        <div class="form-group">
                            <label for="titleLink"><strong>Titulo</strong></label>
                            <input type="text" name="titleLink" value="{{data.titleLink}}" id="titleLink" class="form-control" autofocus required>
                        </div>
                        <br>
                        <div class="form-group">
                            <label for="urlLink"><strong>URL</strong></label>
                            <input type="text" name="urlLink" value="{{data.urlLink}}" id="urlLink" class="form-control" required>
                        </div>
                        <br>
                        <div class="form-group">
                            <label for="descriptionLink"><strong>Descripci√≥n</strong></label>
                            <textarea name="descriptionLink" id="descriptionLink" class="form-control">{{data.descriptionLink}}</textarea>
                        </div>
                        <br>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Enviar
                            </button>
                            <a href="/links" class="btn btn-danger" id="button_cancel_edit_link">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>