<div class="container pt-4">
    <div class="row pb-3">
        <div class="text-center col-md-4  mx-auto">
            <form action="/course/update/title/{{user.idUser}}" method="post">
                <div class="form-group">
                    <input type="text" class="form-control text-center fs-1" value="{{user.titleuniUser}}" id="titleuniUser" name="titleuniUser">
                </div>
                <div class="form-group">
                    <button class="btn btn-succes d-none">Cambiar</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row text-center">

        <table class="table-dark col-md-12 border border-white mx-auto">
            <tbody>
                {{#each course}}
                <tr>
                    <td class="border border-white">{{codCourse}}</td>
                    <td class="border border-white"><a href="{{linkCourse}}"
                            class="text-decoration-none text-white">{{nameCourse}}</a></td>
                    <td class="border border-white"><a href="{{virtualclasslinkCourse}}"
                            class="text-decoration-none text-white">Clase Virtual</a></td>
                    <td class="border border-white"><a href="{{repolinkCourse}}"
                            class="text-decoration-none text-white">Repo Curso</a></td>
                    <td class="border border-white"><a href="{{repogrupolinkCourse}}"
                            class="text-decoration-none text-white">Repo Grupal</a></td>
                    <td class="border border-white">
                        <a href="course/update/{{idCourse}}" class="text-white"><i
                                class="fa-solid fa-pen-to-square"></i></a>
                        <a href="course/deleteConfirm/{{idCourse}}" class="text-white"><i
                                class="fa-solid fa-trash"></i></a>
                    </td>
                </tr>
                {{/each}}
                <tr>
                    <td colspan="6">
                        <a href="/course" class="text-white mx-auto"><i class="fa-solid fa-plus"></i></a>
                    </td>
                </tr>
            </tbody>
        </table>
        <i class="fa-solid fa-graduation-cap text-white mt-5 fs-1"></i>
    </div>
</div>